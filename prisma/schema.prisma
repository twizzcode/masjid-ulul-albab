generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum untuk role user
enum Role {
  USER
  ADMIN
}

// Models untuk booking system
model Booking {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contactName     String
  contactPhone    String
  organizerName   String
  eventName       String
  location        String
  startDate       DateTime
  endDate         DateTime
  letterUrl       String?
  letterFileName  String?
  status          String    @default("pending")
  rejectionReason String?
  approvedBy      String?
  approvedAt      DateTime?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("bookings")
}

// Model untuk feedback/saran
model Feedback {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  content       String  @db.Text
  submitterName String?
  isAnonymous   Boolean @default(false)
  isRead        Boolean @default(false)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("feedbacks")
}

// Auth
model User {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  name          String
  email         String  @unique
  emailVerified Boolean @default(false)
  image         String?
  role          Role    @default(USER)

  sessions Session[]
  accounts Account[]

  bookings  Booking[]
  feedbacks Feedback[]

  @@map("users")
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  identifier String
  value      String
  expiresAt  DateTime

  @@map("verifications")
}
